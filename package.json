{
  "name": "mms-svr",
  "version": "1.0.0",
  "description": "Geology Panorama Street View Map",
  "author": "seonglae",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon",
    "production": "pm2 start process.json",
    "restart": "pm2 restart mms-svr",
    "stop": "pm2 delete mms-svr",
    "productionTest": "cross-env NODE_ENV=production node src/server/index.js",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node src/server/index.js",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "format": "prettier --write \"**/*.{js,jsx,json,md,vue}\"  --ignore-path .gitignore"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.11.0",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "nuxt": "^2.0.0",
    "nuxt-socket-io": "^1.1.4",
    "nuxt-vuex-localstorage": "^1.2.6",
    "ol": "^6.2.1",
    "python-shell": "^2.0.1",
    "serve-static": "^1.14.1",
    "three": "^0.118.3"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.13.1",
    "@nuxtjs/vuetify": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-vue": "^6.2.2",
    "nodemon": "^1.18.9"
  },
  "config": {
    "nuxt": {
      "host": "0.0.0.0"
    }
  },
  "nodemonConfig": {
    "watch": [
      "server/*"
    ],
    "exec": "nuxt  --max_old_space_size=4096 --optimize_for_size"
  }
}
